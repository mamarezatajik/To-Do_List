<Window x:Class="To_Do_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:To_Do_wpf"
        mc:Ignorable="d"
        Title="To do List" Height="800" Width="1000" ResizeMode="NoResize" Background="#021C1E">
    <StackPanel  
    Background="#7DA3A1">


        <GroupBox 
        Header="Add your activity" 
        Margin="10" 
        Height="320"
        Padding="15"
        >

        <StackPanel>
        <StackPanel 
        Orientation="Horizontal">
        <Label 
        VerticalAlignment="Center" 
        FontSize="18"
        >
        Write your Title:
        </Label>
        <TextBox 
        Name="TitleId_xml"
        Background="#bedfcd"
        Width="200"
        Height="28"
        FontSize="17"
        HorizontalAlignment="Center"
        Margin="220,25,10,10"
        />
        </StackPanel>

        <TextBlock
        FontSize="17"
        Margin="8"
        >
        Write your Plan:</TextBlock>
        <TextBox 
        Name="Plan_xml"
        Background="#bedfcd"
        Margin="43,0,0,0"
        Width="700"
        Height="28"
        FontSize="19"
        />

        <TextBlock
        FontSize="17"
        Margin="8"
        >
        Wich day you want to do your plan?
        </TextBlock>
        <DatePicker 
        Name="Date_xml"
        SelectedDate="2022-07-13" 
        Height="25"
        Width="140"
        />

        <StackPanel
        Orientation="Horizontal"
        >

        <Button 
        Click = "Delete_activity"
        FontSize="21"
        Margin="172,32,0,0"
        Height="40"
        Width="140"
        Background="#004445"
        Foreground="#ffffff"
        >Delete activity
        </Button>

        <Button 
        Click = "Get_all"
        FontSize="21"
        Margin="80,32,0,0"
        Height="40"
        Width="140"
        Background="#004445"
        Foreground="#ffffff"
        >All activities
        </Button>

        <Button 
        Click = "Add_activity"
        FontSize="21"
        Margin="80,32,0,0"
        Height="40"
        Width="140"
        Background="#004445"
        Foreground="#ffffff"
        >Add activity
        </Button>


        </StackPanel>
        

        </StackPanel>
        </GroupBox>


        <GroupBox 
        Header="To Do List" 
        Margin="10" 
        Height="400"
        Padding="15"
        >
        <StackPanel>
        <TextBox 
        FontSize="17" 
        Height="350" 
        Width="900" 
        Padding="20" 
        IsReadOnly="True"
        Margin="17"
        Name="To_Do_List_xml" 
        Background="#bedfcd"/>
        </StackPanel>
        </GroupBox>

    </StackPanel>
</Window>